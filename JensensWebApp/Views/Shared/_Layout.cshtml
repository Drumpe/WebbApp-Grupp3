    <div>
        <main role="main" class="mainclass">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white ">

        <!--&copy; 2023 - JensensWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>-->

        <div class="align-top text-center">

            <dl class="row m-0">
                <dt class="col"><a class="footer-nav-headline" href="?topic=Halsa&sortBy=">Hälsa</a></dt>
                <dt class="col"><a class="footer-nav-headline" href="?topic=SamhalleKonflikter&sortBy=">Samhälle & Konflikter</a></dt>
                <dt class="col"><a class="footer-nav-headline" href="?topic=Miljo&sortBy=">Miljö</a></dt>
                <dt class="col"><a class="footer-nav-headline" href="?topic=VetenskapTeknik&sortBy=">Vetenskap & Teknik</a></dt>
